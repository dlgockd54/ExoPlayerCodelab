<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50dp" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground">

    <TextView
            android:id="@+id/tv_playlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_playlist_duration"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="ABCDEF"/>

    <TextView
            android:id="@+id/tv_playlist_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_playlist_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="10:11"/>
</androidx.constraintlayout.widget.ConstraintLayout>